modules = ["python-3.11", "postgresql-16", "python3", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "cargo", "ffmpeg-full", "freefont_ttf", "freetype", "geckodriver", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libiconv", "libxcrypt", "ollama", "pkg-config", "qhull", "rustc", "tcl", "tk", "xdg-utils", "xsimd"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Research Dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Enhanced API Server"

[[workflows.workflow]]
name = "API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api_server.py"
waitForPort = 8000

[[workflows.workflow]]
name = "Research Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run research_dashboard.py --server.port 8001"
waitForPort = 8001

[[workflows.workflow]]
name = "React Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx vite --host 0.0.0.0 --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Enhanced API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api_server_enhanced.py"
waitForPort = 8000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8001
externalPort = 3000
